<p id="notice"><%= notice %></p>

<h1>Versions</h1>

<table>
  <thead>
    <tr>
      <th>Box</th>
      <th>Version</th>
      <th>Description html</th>
      <th>Description markdown</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @versions.each do |version| %>
      <tr>
        <td><%= version.box.name %></td>
        <td><%= version.version %></td>
        <td><%= version.description_html %></td>
        <td><%= version.description_markdown %></td>
        <td><%= link_to 'Show', user_box_version_providers_path(version.providers.new.params) %></td>
        <td><%= link_to 'Edit', edit_user_box_version_path(version.params) %></td>
        <td><%= link_to 'Destroy', user_box_version_path(version.params), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Version', new_user_box_version_path %>
