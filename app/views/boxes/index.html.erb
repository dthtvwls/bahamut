<p id="notice"><%= notice %></p>

<h1>Boxes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Description</th>
      <th>Short description</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boxes.each do |box| %>
      <tr>
        <td><%= box.user.name %></td>
        <td><%= box.description %></td>
        <td><%= box.short_description %></td>
        <td><%= box.name %></td>
        <td><%= link_to 'Show', user_box_versions_path(box.versions.new.params) %></td>
        <td><%= link_to 'Edit', edit_user_box_path(box.params) %></td>
        <td><%= link_to 'Destroy', user_box_path(box.params), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Box', new_user_box_path %>
